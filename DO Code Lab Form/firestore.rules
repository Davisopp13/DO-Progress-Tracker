rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This rule matches the path: /artifacts/{appId}/users/{userId}/code_lab_design_questionnaires/{documentId}
    match /artifacts/{appId}/users/{userId}/code_lab_design_questionnaires/{documentId} {
      // Allow read access ONLY if the user is authenticated (request.auth != null) 
      // AND the user's ID matches the {userId} in the path.
      allow read: if request.auth != null && request.auth.uid == userId;

      // Allow writing ONLY if the user is authenticated. This is less restrictive for anonymous sign-in.
      allow write: if request.auth != null;
    }
  }
}